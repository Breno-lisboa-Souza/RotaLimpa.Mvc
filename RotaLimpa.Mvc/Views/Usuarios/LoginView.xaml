<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RotaLimpa.Mvc.Views.Usuarios.LoginView"
             Title="LoginView"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#02A3C7" Offset="0"/>
            <GradientStop Color="#16A34A" Offset="1"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <Frame WidthRequest="450" HeightRequest="500" BackgroundColor="#0080C1" >
    <Grid VerticalOptions="CenterAndExpand" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="informacao" Text="ENTRAR" TextColor="White" FontSize="28"  HorizontalOptions="CenterAndExpand" Grid.Row="0" BackgroundColor="Transparent" Margin="0,5,0,0" />
        
        <BoxView HeightRequest="1" HorizontalOptions="CenterAndExpand" Grid.Row="1" BackgroundColor="Black" />

        
        <Entry x:Name="user" Placeholder="NRO IDENTIFICAÇÃO" Margin="0,10,0,0"
       WidthRequest="360" Grid.Row="3" BackgroundColor="White" TextColor="#A8A8A8"/>
        <Entry x:Name="senha" Placeholder="SENHA" Text="{Binding Senha}" IsPassword="True"
       Margin="0,10,0,0" WidthRequest="360" Grid.Row="5" BackgroundColor="White" TextColor="#A8A8A8"/>


        <!-- Container para os botões -->
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="10" Grid.Row="7">
            <!-- Botão "Entrar" -->
            <Button x:Name="btnAutenticar" Text="Entrar" Command="{Binding AutenticarCommand}" Margin="0,100,0,0" WidthRequest="360" BackgroundColor="#32C84A" CornerRadius="2"/>
        </StackLayout>

    </Grid>
    </Frame>
</ContentPage>
